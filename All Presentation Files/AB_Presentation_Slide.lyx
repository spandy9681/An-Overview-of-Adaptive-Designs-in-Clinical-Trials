status open

\begin_layout Plain Layout
Doubly Adaptive Biased Coin Design
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $\widehat{\rho}$
\end_inset

 be the desired allocation, replaced by current estimates 
\begin_inset Formula $\widehat{p}_{A}$
\end_inset

 and 
\begin_inset Formula $\widehat{p}_{B}$
\end_inset

.
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\nicefrac{j_{A}}{j}$
\end_inset

 and 
\begin_inset Formula $\nicefrac{j_{B}}{j}$
\end_inset

 be the current proportions of patients that have already been allocated
 to 
\begin_inset Formula $A$
\end_inset

 and 
\begin_inset Formula $B$
\end_inset

, respectively.
\end_layout

\begin_layout Itemize
Then we assign patient 
\begin_inset Formula $j$
\end_inset

 to treatment 
\begin_inset Formula $A$
\end_inset

 with probability 
\begin_inset Formula $g\left(\nicefrac{j_{A}}{j},\widehat{\rho}\right)$
\end_inset

.
\end_layout

\begin_layout Itemize
Here 
\begin_inset Formula $g$
\end_inset

